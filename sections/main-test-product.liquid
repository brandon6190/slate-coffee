<h2>{{product.title}}</h2>
<img src="{{product.featured_image | img_url: '300x'}}" />

{% for block in section.blocks %}
    {% case block.type %}
        {% when "tax_notice_block"  %}
            <h4>{{block.settings.tax_notice}}</h4>
        {% when "shipping_notice_block" %}
            <h4>{{block.settings.shipping_notice}}</h4>
        {% when "product_price_block" %}
            <h4>{{product.price}}</h4>
    {% endcase %}
{% endfor %}

{% if section.settings.show_review %}
<h4>⭐⭐⭐⭐⭐</h4>
{% endif %}

{% schema %}
    {
        "name": "product page content",
        "settings": [
            {
                "id": "show_review",
                "label": "show reviews?",
                "type": "checkbox"
            }
        ],
        "blocks": [
            {
                "type": "tax_notice_block",
                "name": "Tax Notice",
                "limit": 1,
                "settings": [
                    {
                        "id": "tax_notice",
                        "label": "Enter Tax Notice",
                        "type": "text"
                    }
                ]
            },
            {
                "type": "shipping_notice_block",
                "name": "Shipping Notice",
                "limit": 1,
                "settings": [
                    {
                        "id": "shipping_notice",
                        "label": "Enter Shipping Notice",
                        "type": "text"
                    }
                ]
            },
            {
                "type": "product_price_block",
                "name": "Product Price",
                "limit": 1,
                "settings": []
            }
        ]
    }
{% endschema %}